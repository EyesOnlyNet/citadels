<!doctype html>
<html>
    <head>
        <meta charset="utf-8">
        {% block headLinks %}
            <link rel="icon" sizes="16x16" href="favicon.ico" />
            <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.1.0/css/bootstrap.min.css">
            <link rel="stylesheet" href="/bundles/citadelscore/css/base.css" />
        {% endblock %}

        <title>
            {% block title %}
                Citadels - the Webversion
            {% endblock %}
        </title>
    </head>

    <body>
        {% block body %}
            {% block debug %}{% endblock %}

            <div class="site-header">
                {% block siteHeader %}{% endblock %}
                <hr />
            </div>

            {% for flashMessage in app.session.flashbag.get('notice') %}
                <div class="flash-message">
                    <em>Notice</em>: {{ flashMessage }}
                </div>
            {% endfor %}

            <div class="site-content">
                {% block siteContent %}{% endblock %}
            </div>

            <div class="site-footer">
                {% block siteFooter %}
                    {{ include('CitadelsCoreBundle::_partial/footer.html.twig') }}
                {% endblock %}
            </div>
        {% endblock %}

        {% block scripts %}
{#            <script src="https://code.jquery.com/jquery.js"></script>#}
{#            <script src="http://code.jquery.com/ui/1.9.2/jquery-ui.js"></script>#}
            <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/2.1.0/jquery.min.js"></script>
            <script src="//cdnjs.cloudflare.com/ajax/libs/jqueryui/1.10.4/jquery-ui.min.js"></script>
            <script src="//netdna.bootstrapcdn.com/bootstrap/3.1.0/js/bootstrap.min.js"></script>
            <script src="//cdnjs.cloudflare.com/ajax/libs/knockout/3.1.0/knockout-min.js"></script>
            <script src="//cdnjs.cloudflare.com/ajax/libs/fingerprintjs/v0.5.1/fingerprint.min.js"></script>
        {% endblock %}
    </body>
</html>

{% extends "CitadelsCoreBundle::layout.php.twig" %}

{% block headLinks %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('bundles/citadelscore/css/index/welcome.css') }}" />
{% endblock %}

{% block siteHeader %}
    <header>
        <h1>Ohne Furcht und Adel</h1>
        <h2>- Webversion [alpha] -</h2>
    </header>
{% endblock %}

{% block siteContent %}
    <div>
        <div class="jumbotron">
            <form action="{{ path('game.create') }}" method="post">
                <input type="hidden" name="fingerprint" />
                <button class="btn">ein neues Spiel starten</button>
            </form>
        </div>

        <div class="panel panel-default">
            <div class="panel-heading">deine laufenden Spiele</div>
            <ul class="list-group">
                <li class="list-group-item">
                    <a href="#">
                        <h4>
                            Spiel ####
                            <small>[ ##:## ##.##.## ]</small>
                        </h4>
                    </a>
                </li>
            </ul>
      </div>

    </div>
{% endblock %}

{% block scripts %}
    {{ parent() }}
    <script src="/bundles/citadelscore/js/index/welcome.js"></script>
{% endblock %}
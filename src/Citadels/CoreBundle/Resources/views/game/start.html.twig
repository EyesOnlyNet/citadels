{% extends "CitadelsCoreBundle::layout.php.twig" %}

{% block debug %}
    {{ parent() }}
    <div id="debug">
        <p>
            Game-ID: {{ game.getId() }}
        </p>
    </div>
{% endblock %}

{% block headLinks %}
    {{ parent() }}
    <link rel="stylesheet" href="/bundles/citadelscore/css/game/start.css" />
{% endblock %}

{% block siteHeader %}
    <span id="my-game" data-id="{{ game.getId() }}"></span>
    <header>
        {% include 'CitadelsCoreBundle:Game:start/player-list-compact.html.twig' %}
    </header>
{% endblock %}

{% block siteContent %}
    {% include 'CitadelsCoreBundle:Game:start/character-list.html.twig' %}

    <div data-section="my-player"></div>
    {% include 'CitadelsCoreBundle:Game:start/my-player.html.twig' %}

    <div id="action-tabs" class="tabs">
        {% include 'CitadelsCoreBundle:Game:start/tabs/actions.html.twig' %}

        <div class="tab-body">
            {% include 'CitadelsCoreBundle:Game:start/tabs/actions/draw-card.html.twig' %}
            {% include 'CitadelsCoreBundle:Game:start/tabs/actions/effect-draw-cards.html.twig' %}
            {% include 'CitadelsCoreBundle:Game:start/tabs/actions/effect-exchange-cards-stack.html.twig' %}
            {% include 'CitadelsCoreBundle:Game:start/tabs/actions/effect-exchange-cards-player.html.twig' %}
            {% include 'CitadelsCoreBundle:Game:start/tabs/actions/effect-get-card-gold.html.twig' %}
            {% include 'CitadelsCoreBundle:Game:start/tabs/actions/effect-get-gold.html.twig' %}
            {% include 'CitadelsCoreBundle:Game:start/tabs/actions/effect-play-cards.html.twig' %}
            {% include 'CitadelsCoreBundle:Game:start/tabs/actions/effect-remove-card.html.twig' %}
            {% include 'CitadelsCoreBundle:Game:start/tabs/actions/effect-stall-character.html.twig' %}
            {% include 'CitadelsCoreBundle:Game:start/tabs/actions/effect-steal-gold.html.twig' %}
            {% include 'CitadelsCoreBundle:Game:start/tabs/actions/get-gold.html.twig' %}
            {% include 'CitadelsCoreBundle:Game:start/tabs/actions/hand.html.twig' %}
            {% include 'CitadelsCoreBundle:Game:start/tabs/actions/play-card.html.twig' %}
            {% include 'CitadelsCoreBundle:Game:start/tabs/actions/end.html.twig' %}
        </div>
    </div>
{% endblock %}

{% block scripts %}
    {{ parent() }}
    <script src="/bundles/citadelscore/js/game/start.js"></script>
    <script src="/bundles/citadelscore/js/view-model/game.js"></script>
{% endblock %}

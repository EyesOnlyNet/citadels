{% extends "CitadelsCoreBundle::layout.php.twig" %}

{% block debug %}
    {{ parent() }}
    <div id="debug">
        <p>
            Game-ID: {{ game.getId() }}
        </p>
    </div>
{% endblock %}

{% block headLinks %}
    {{ parent() }}
    <link rel="stylesheet" href="/bundles/citadelscore/css/game/board.css" />
{% endblock %}

{% block siteHeader %}
    <header>
        {% include 'CitadelsCoreBundle:Game:board/player-list-compact.html.twig' %}
    </header>
{% endblock %}

{% block siteContent %}
    {% include 'CitadelsCoreBundle:Game:board/character-list.html.twig' %}
    {% include 'CitadelsCoreBundle:Game:board/my-player.html.twig' %}
{% endblock %}

{% block scripts %}
    {{ parent() }}
    <script src="/bundles/citadelscore/js/view-model/myPlayer.js"></script>
    <script src="/bundles/citadelscore/js/view-model/characterList.js"></script>
    <script src="/bundles/citadelscore/js/view-model/playerList.js"></script>
    <script src="/bundles/citadelscore/js/view-model/game.js"></script>
    <script src="/bundles/citadelscore/js/control/modal.js"></script>
    <script src="/bundles/citadelscore/js/game/board.js"></script>
{% endblock %}
